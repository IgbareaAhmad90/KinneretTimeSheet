@model IEnumerable<KinneretCollegeTimeSheet.Models.UserCourse>

<br /><br />
<p>
    <a asp-action="Create">Create New</a>
</p>


@{
    var e = Model.FirstOrDefault();
}

<p>
    User Name : @e.User <br />
    ID : @e.User.CertificateID <br />
    Count : @Model.Count()
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.LecturerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.LecturerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Key)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.LecturerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.LecturerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Key)
            </td>
            <td>
                <a asp-controller="Reports" asp-action="Index" asp-route-id="@item.Id">דיווחים</a>
            </td>
        </tr>
        }
    </tbody>
</table>




<div style="margin-bottom:2%">
    @await Html.PartialAsync("ObjectMyCourses", Model)

</div>


<div style="margin-bottom:2%">
    @await Html.PartialAsync("ListMyCourses", Model)

</div>
