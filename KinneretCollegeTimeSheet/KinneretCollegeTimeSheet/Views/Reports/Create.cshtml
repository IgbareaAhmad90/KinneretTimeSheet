@model KinneretCollegeTimeSheet.Models.Report

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      

            <div class="form-group">
                <label asp-for="type" class="control-label"></label>
                <select asp-for="type" class="form-control">
                    <option>קבוצתי</option>
                    <option>פרטי</option>
                </select>
                <span asp-validation-for="type" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="timeStart" class="control-label"></label>
                <input asp-for="timeStart" class="form-control" type="time" value="@DateTime.Now.ToString("hh:mm")" />
                <span asp-validation-for="timeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="timeEnd" class="control-label"></label>
                <input asp-for="timeEnd" class="form-control" type="time" value="@DateTime.Now.ToString("hh:mm")" />
                <span asp-validation-for="timeEnd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="discription" class="control-label"></label>
                <input asp-for="discription" class="form-control" placeholder="תיעוד" />
                <span asp-validation-for="discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserCourseId" class="control-label"></label>
                <input asp-for="UserCourseId" class="form-control" value="@ViewBag.UserCourseId" />
                <span asp-validation-for="UserCourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



